<nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/">
        <img src="./assets/images/Logo-OC-Weekly-Scraper.png" height="70" alt="OC Weekly Scraper">
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <a class="nav-item nav-link" href="/">Home</a>
            <a class="nav-item nav-link active" href="/saved">Saved Articles
                <span class="sr-only">(current)</span>
            </a>
            <button href="/saved" type="button" class="btn btn-danger" id="scrape">Scrape OCWeekly</button>
        </div>
    </div>
</nav>
<div class="container-fluid">
    <div class="jumbotron text-center jumbotron-style">
        <div class="overlay">
            <div class="caption">
                <h1 class="display-1 text-white">Mongo Scraper</h1>
                <h2 class="text-white">OC Weekly</h2>
            </div>
        </div>
    </div>
    <div class="row">
        {{#each articles}}
        <div class="col-md-4">
            <div class="card">
                <img src"..." class="card-img-top" alt="...">
                <div class="card-body">
                    <a href="{{this.link}}">
                        <h5 class="card-title">{{this.title}}</h5>
                    </a>
                    <button data="{{_id}}" class="btn btn-info note-btn">Article Notes</button>
                    <button data="{{_id}}" class="btn btn-danger delete-btn">Remove From Saved</button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
<div class="modal fade" id="note-modal" tabindex="-1" role="dialog" aria-labelledby="successMessage" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Notes for Article <span id="article-id"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card">
                    <ul class="list-group list-group-flush">
                    </ul>
                </div>
                <br />
                <div class="form-group">
                    <label for="note-input" class="sr-only">Enter Note Here</label>
                    <textarea class="form-control" id="note-input" rows="3" placeholder="New Note"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="save-note">Save Note</button>
            </div>
        </div>
    </div>
</div>